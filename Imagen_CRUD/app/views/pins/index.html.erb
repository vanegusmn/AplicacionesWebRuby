<div class="row collapse">
<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table style="text-align: center" role="grid">
  <thead style="text-align: center">
    <tr>
      <th style="text-align: center">Foto</th>
      <th style="text-align: center">Descripción</th>
      <th colspan="3" style="text-align: center">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag(pin.photo, :style =>'width:300px') %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Mostrar', pin, class: 'button secondary' %></td>
        <td><%= link_to 'Editar', edit_pin_path(pin), class: 'button success' %></td>
        <td><%= link_to 'Eliminar', pin, method: :delete, data: { confirm: '¿Estas Seguro?' }, class: 'button alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path, class: 'button' %>
</div>